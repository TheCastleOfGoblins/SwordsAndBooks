        <form role="form" class="form-inline" method='POST' action='/prepareSession'>
          <h2 style="text-align:center">Login</h2>
          <div class='form-group allmid' style="text-align:center">
            <label class="sr-only" style="text-align:center;font-style:italic;" for="exampleInputEmail2">Username</label>
            <%- contentTag('input','',{class:'turbobig',type:'text',name:'userName',id:'userName'})%>
          </div>
          <div class='form-group allmid' style="text-align:center">
            <label class="sr-only"  style="font-style:italic;" for="exampleInputEmail2">Password</label>
            <%- contentTag('input','',{class:'turbobig',type:'password',name:'password',id:'password'})%>
          </div>
          
          <div class='row offseted-content'>
            <div class="offset4 span2">
              <%- contentTag('input','',{class:'turbobig',type:'submit',name:'submit',id:'submit', value:'Enter the adventure', class:'btn btn-default btn-large'})%>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

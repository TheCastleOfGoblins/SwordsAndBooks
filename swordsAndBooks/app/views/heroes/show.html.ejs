<div class="hero-unit">
  <h2 class="id"><%= hero.id %></h2>
  <%- linkTo('Edit this hero', editHeroPath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', heroPath(''), {class: 'btn pull-right'}); %>
</div>

<h2>Hero Properties</h2>
<% for(var i in hero) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= hero[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>
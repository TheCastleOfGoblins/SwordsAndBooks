<div class="main-visual">
  <img src="/img/battle1.jpg">
</div>

<div class="title-intro">
  <h1><%=session.get('user').name%>'s Heroes</h2>
</div>

<div id="heros-list">
<% if (heros) { %>
    <% for (var i = 0, ii = heros.length; i < ii; i++) { %>
      <div class='span2 offset4 hero' style='margin-top:15px;border:solid 2px' id='<%=heros[i].id%>'>
        <div class='span2'>
          <img src='<%=heros[i].image%>' width='50px' height='50px'/>
        </div>
        <div class='span2'>
          <strong>
            <%=heros[i].name%>
          </strong>
        </div>
        <div class='span2'>
          Gender: <%=heros[i].gender%>
        </div>
        <div class='span2'>
          Level: <%=heros[i].level%>
        </div>
      </div>
    <% } %>
<% } %>
</div>
<script type="text/javascript">
  $('.hero').click(function() {
    window.location.href = '/selectHero/' + $(this).attr('id');
  });
</script>
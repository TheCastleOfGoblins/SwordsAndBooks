<div class="hero-unit">
  <form id="hero-form" class="form-horizontal" action="/heros/<%= params.id %>?_method=PUT" method="POST">
    <fieldset>
      <legend>Update this Hero</legend>
      <% if(params.errors) { %>
      <div class="control-group">
        <ul>
        <% for(var err in params.errors) { %>
          <li><%= params.errors[err]; %></li>
        <% } %>
        </ul>
      </div>
      <% } %>

      <%- partial('form', {hero: hero}) %>

      <div class="form-actions">
        <%- contentTag('input', 'Save', {type: 'submit', class: 'btn btn-primary'}) %>
      </div>
    </fieldset>
  </form>
</div>

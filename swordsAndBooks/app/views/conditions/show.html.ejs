<div class="hero-unit">
  <h2 class="id"><%= condition.id %></h2>
  <%- linkTo('Edit this condition', editConditionPath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', conditionPath(''), {class: 'btn pull-right'}); %>
</div>

<h2>Condition Properties</h2>
<% for(var i in condition) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= condition[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>
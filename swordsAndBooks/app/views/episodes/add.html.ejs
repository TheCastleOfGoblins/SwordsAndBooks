<div class="hero-unit">
  <form id="episode-form" class="form-horizontal" action="/episodes" method="POST">
    <fieldset>
      <legend>Create a new Episode</legend>
      <% if(params.errors) { %>
      <div class="control-group">
        <ul>
        <% for(var err in params.errors) { %>
          <li><%= params.errors[err]; %></li>
        <% } %>
        </ul>
      </div>
      <% } %>

      <%- partial('form', {episode: params, books: books}) %>

      <textarea name="story">Easy! You should check out MoxieManager!</textarea>

      Conditions: <br>
      <div class="control-group conditions">
      Text:
      <input type="text" name=conditions[]>
      <a href="">Create the next episode</a> <br>
      </div>

      <a href="" id="add-condition">Add condition</a>

      <div class="form-actions">
        <%- contentTag('input', 'Add', {type: 'submit', class: 'btn btn-primary'}) %>
      </div>
    </fieldset>

  </form>
</div>
